---
import "../styles/global.scss";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import AfterFooter from "../components/AfterFooter.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<title>Koddo – Custom Web Design & Development Studio</title>
		<meta
			name="description"
			content="Koddo is a custom web design and development studio. We build fast, modern, scalable websites and web apps for startups, SaaS, and design-forward brands."
		/>
		<meta
			name="keywords"
			content="web design, web development, astro, react, static site, headless cms, koddo, custom website, saas, startup"
		/>
		<meta
			property="og:title"
			content="Koddo – Custom Web Design & Development Studio"
		/>
		<meta
			property="og:description"
			content="We build fast, modern, scalable websites and web apps for startups, SaaS, and design-forward brands."
		/>
		<meta property="og:image" content="/og-image.png" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://koddo.io/" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta
			name="twitter:title"
			content="Koddo – Custom Web Design & Development Studio"
		/>
		<meta
			name="twitter:description"
			content="We build fast, modern, scalable websites and web apps for startups, SaaS, and design-forward brands."
		/>
		<meta name="twitter:image" content="/og-image.png" />
		<link rel="canonical" href="https://koddo.io/" />
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Organization",
				"name": "Koddo",
				"url": "https://koddo.io/",
				"logo": "https://koddo.io/favicon.svg",
				"sameAs": [],
				"description": "Custom web design and development studio. We build fast, modern, scalable websites and web apps for startups, SaaS, and design-forward brands."
			}
		</script>
	</head>

	<body>

		<div id="backtotop" style="height: 0; visibility: hidden;"></div>

		<Header />

		<main class="main" style="position: relative; z-index: 1;">
			<slot />
		</main>

		<Footer />

		<AfterFooter />

		<script type="module" src="/src/scripts/site.js" is:inline></script>

	</body>

</html>

<style is:global is:inline>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		margin: 0;
		padding: 0;
		width: 100%;
		height: auto;
		overflow-x: hidden;
		scroll-behavior: smooth;
		scrollbar-width: thin;
		scrollbar-color: var(--light) var(--primary);
	}

	body {
		display: flex;
		flex-direction: column;
		font-family: "Satoshi", ui-sans-serif;
		background: var(--primary);
		color: var(--text);
		font-size: 1rem;
		line-height: 1;
		position: relative;
		padding-bottom: calc( 0.5 * (var(--afterFooterHeight)));

		@media (min-width: 768px) {
			padding-bottom: calc( 0.75 * (var(--afterFooterHeight)));
		}

		@media (min-width: 1024px) {
			padding-bottom: calc( 1 * (var(--afterFooterHeight)));
		}

		&::before {
			content: "";
			position: absolute;
			top: 0;
			right: 0;
			left: 0;
			margin: 0 auto;
			border-radius: var(--colRadius);
			background: var(--lightAlt);
			z-index: -1;
			width: 100%;
			height: calc(100% - var(--afterFooterHeight));
		}
	}
</style>
